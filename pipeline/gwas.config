includeConfig 'configs/local.config'

params {

  indir  = "/restricted/projectnb/necs/Zeyuan_Analysis/GWASpipeline/GWASpipeline/pipeline/data"
  outdir = "/restricted/projectnb/necs/Zeyuan_Analysis/GWASpipeline/GWASpipeline/pipeline/results"

  vcf_list    = "${params.indir}/toy_vcf.csv"
  pheno  = "${params.indir}/pheno_file_logistic.csv"
  snpset = "${params.indir}/snpset.txt"
  
  
  phenotypes = "outcome"
  covars     = "age,sex,PC1,PC2,PC3,PC4"
  ref_genome = "hg19"
  
  // -----------------------------------------------------
  // PCA and GRM
  // -----------------------------------------------------
  
  pca_grm  = true
  grm      = "null"

  // -----------------------------------------------------
  // GWAS Parameters
  // -----------------------------------------------------
  
  gwas     = false
  model    = "logistic"
  test     = "Score"

  // -----------------------------------------------------
  // Gene-based Analysis Parameters
  // -----------------------------------------------------
  
  gene_based  = true
  max_maf     = 0.5
  method      = "Burden"

  // -----------------------------------------------------
  // Genome-wide longitudinal Analysis Parameters
  // -----------------------------------------------------
  
  longitudinal = false
  model_l      = "logistic"

}
